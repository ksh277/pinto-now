generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Design {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  mode           String   // 'auto' | 'template'
  templateShape  String?  // 'rect' | 'circle' | 'pentagon' | 'hexagon'

  widthMM        Float
  heightMM       Float
  dpi            Int
  bleedMM        Float
  safeMM         Float
  borderMM       Float     // +15mm
  cutOffsetMM    Float     // +8mm

  holeX          Float     // px
  holeY          Float     // px
  holeDiameterMM Float

  boardPath      Json?
  cutlinePath    Json?
  stateJson      Json

  previewPng     Bytes?
}

model Banner {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  href      String
  imgSrc    String
  alt       String
}

model StripBanner {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isOpen    Boolean  @default(true)
  bgType    String
  bgValue   String
  message   String
  href      String?
  canClose  Boolean  @default(true)
  isActive  Boolean  @default(true)
}

model Product {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  price       Int
}

model Notice {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
}

model Faq {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  question  String
  answer    String
}

model Guide {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
}

model Inquiry {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String
  message   String
  status    String?  @default("open")
}
